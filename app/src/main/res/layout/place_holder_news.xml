<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="3dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="2dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/palce_holder"
            app:cardCornerRadius="15dp">

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:layout_marginTop="4dp">

            <View
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:background="@color/palce_holder"
                tools:text="Pelatih Kamboja Ungkap Kekuatan Timnas Indonesia yang Bikin Timnya Kalah" />

            <View
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:background="@color/palce_holder"
                tools:text="Usai pertandingan, pelatih Kamboja Ryu Hirose memberikan pujian pada Timnas Indonesia. Dia mengungkapfaktor yang membuat Indonesia menang." />

            <TextView
                android:id="@+id/author_date"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginTop="4dp"
                android:background="@color/palce_holder" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>